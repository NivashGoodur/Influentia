{% extends 'base.html.twig' %}

{% block title %}Influentia - Premium Article
{% endblock %}

{% block content %}


	{% if article_order %}

		<div class="container">
			<h1 class="text-center mt-4">Article premium n
				{{ article.id }}</h1>

			<div class="row">
			<p>Retourner à la page des articles premium <a href="{{ path('all_premium_articles') }}">ici</a> </p>	

				<div class="show-article">
					<h2>{{ article.title }}</h2>
					<h4>{{ article.creationDate|date("d/m/Y \à H\\hi") }}</h4>
					<p>{{article.content}}</p>
				</div>
			</div>
		</div>
	{% else %}
		<div class="container">

			<h3>Article payant</h3>
			Veuillez l'acheter ICI ou vous Abonner ICI
		</div>
	{% endif %}
{% endblock %}
